<div class="container">
    <div class="row">
        <div class="col">
            {{#with contact}}
                <div class="p-5 mt-5 mb-4 bg-light rounded-3">
                    <div class="container-fluid py-5">
                        <h1 class="display-5 fw-bold">{{ firstname }} {{ lastname }}</h1>
                        <p class="col-md-8 fs-4">{{ email }}</p>
                        <p class="col-md-8 fs-4">{{ tel }}</p>
                        <hr class="my-4">
                        <a href="#" class="btn btn-warning btn-sm">Modifier la fiche</a>
                        <a href="#" class="btn btn-danger btn-sm">Supprimer le contact</a>
                        <a href="#" class="btn btn-primary btn-sm">Retourner aux contacts</a>
                    </div>
                </div>
            {{/with}}
        </div>
    </div>
</div>
